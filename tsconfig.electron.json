  "compilerOptions": {
    "outDir": "electron-dist",
    "rootDir": "electron",
    "module": "NodeNext",
    "target": "ES2022",
    "moduleResolution": "NodeNext",
    "lib": ["ES2022"],
    "types": ["node"],
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["electron/**/*.ts"]
}


